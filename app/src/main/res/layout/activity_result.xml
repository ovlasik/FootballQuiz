<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a281664.footballquiz.ResultActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/img2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="40sp"
        android:textColor="#e0fb07"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3/5"
        android:textSize="30sp"
        android:textColor="#e0fb07"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/totalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score : 333"
        android:textSize="30sp"
        android:textColor="#e0fb07"
        android:layout_marginTop="60dp"/>

    <ImageButton
        android:layout_width="218dp"
        android:layout_height="108dp"
        android:text="Play Again"
        android:src="@drawable/play_again_button"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:onClick="returnTop"
        android:background="@null"/>





</LinearLayout>
